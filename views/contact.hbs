<h1 class="text-center">{{title}}</h1>

<div class="col-md-6 col-md-offset-3">
  <form method="post">
    <div class="form-group">
      <label>Name</label>
      <input class="form-control" name="name" placeholder="Your name" value={{name}}>
    </div>
    <div class="form-group">
      <label>Email address</label>
      <input type="email" name="email" class="form-control" placeholder="Your email" value={{email}}>
    </div>
    <div class="form-group">
      <label>Message</label>
      <textarea class="form-control" name="message" rows="5">{{message}}</textarea>
    </div>
    {{#each errorMessages}}
      <div class="alert-danger alert">
        {{this.msg}}
      </div>
    {{/each}}
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
